@model RS1_2020_01_30.ViewModels.TakmicenjeIndexVM
@{
    ViewData["Title"] = "Index";
}

<h4>Korisnik može odabrati</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Takmicenje" asp-action="Odaberi">
            <div class="form-group">
                <label class="control-label" asp-for="SkolaID">Škola</label>
                <select asp-for="SkolaID" asp-items="@Model.Skole" class="form-control"></select>
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Razred">Razred</label>
                <select asp-for="Razred" asp-items="@Model.Razredi" class="form-control"></select>

            </div>

            <div class="form-group">
                <input class="btn btn-default" type="submit" value="Odaberi" />
            </div>

        </form>
    </div>
</div>

