
@{
    ViewData["Title"] = "Dodaj";
}
@model RS1_2020_01_30.ViewModels.TakmicenjeDodajVM

<h4>Dodavanje takmičenja</h4>
<br />

<div class="row">
    <div class="col col-md-4">
        <form asp-controller="Takmicenje" asp-action="Snimi">

            <input asp-for="SkolaID" value="@Model.SkolaID"  hidden />

            <div class="form-group">

                <label class="control-label" asp-for="SkolaID">Škola domaćin:</label>
                <input asp-for="Skola" class="form-control" readonly/>

            </div>

            <div class="form-group">
                <label class="control-label" asp-for="PredmetID">Predmet</label>
                <select asp-for="PredmetID" asp-items="@Model.Predmeti" class="form-control"></select>

            </div>

            <div class="form-group">
                <label asp-for="Razred" class="control-label">Razred</label>
                <select asp-for="Razred" asp-items="@Model.Razredi" class="form-control"></select>

            </div>

            <div class="form-group">
                <label asp-for="Datum" class="control-label">Datum</label>
                <input asp-for="Datum" type="date" class="form-control"/>

            </div>
            
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />

            </div>

        </form>
    </div>
</div>

