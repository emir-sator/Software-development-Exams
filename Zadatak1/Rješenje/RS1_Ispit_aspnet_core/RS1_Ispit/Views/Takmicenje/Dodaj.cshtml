@model RS1_Ispit_asp.net_core.ViewModels.TakmicenjeDodajVM
@{
    ViewData["Title"] = "Dodaj";
}

<h4>Dodavanje takmičenja</h4>
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Takmicenje" asp-action="Snimi">
            <input asp-for="SkolaID" value="@Model.SkolaID" hidden />
            <div class="form-group">

                <label class=" control-label" asp-for="PredmetID">Predmet</label>
                <select asp-for="PredmetID" asp-items="@Model.Predmeti" class="form-control"></select>

            </div>

            <div class="form-group">
                <label class="control-label" asp-for="SkolaID">Škola</label>
                
                <input asp-for="SkolaID" hidden/>
                <input asp-for="Skola" class="form-control" readonly />

            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Datum">Datum</label>
                <input asp-for="Datum" type="date" class="form-control" readonly />
            </div>

            <div class="form-group">

                <input type="submit" value="Snimi" class="btn btn-default" />
            </div>

        </form>


    </div>

</div>


